<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#FFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ishaan"
                app:civ_border_width="0dp"
                app:civ_border_color="#FF000000"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ishaan Dhamija"
                android:textSize="30sp"
                android:textColor="#000"
                android:layout_gravity="center"
                android:layout_marginTop="50sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B.Tech Computer Science"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000"
                android:layout_marginTop="10sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="and Engineering"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ishaandhamija@gmail.com "
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginTop="10sp"
                android:textColor="#0000FF"
                android:id="@+id/mail"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20sp">

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/fb"
                    android:id="@+id/fb"/>

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/gh"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:id="@+id/gh"/>

                <ImageView
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    android:src="@drawable/li"
                    android:id="@+id/li"/>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>